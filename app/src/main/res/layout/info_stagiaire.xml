<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textInfoStg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titre_page_info_stg"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/textNomStg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nom_stg"
            android:layout_marginTop="25dp"/>


        <EditText
            android:id="@+id/editNomStg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:hint="@string/nom_stg"
            android:autofillHints=""/>

        <TextView
            android:id="@+id/textPrenomStg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prenom_stg"
            android:layout_marginTop="25dp"/>


        <EditText
            android:id="@+id/editPrenomStg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:hint="@string/prenom_stg"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textclasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/classe"
            android:layout_marginTop="25dp"/>


        <EditText
            android:id="@+id/editclasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/classe"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textspe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spe"
            android:layout_marginTop="25dp"/>


        <EditText
            android:id="@+id/editspe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/spe"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textviewprof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prof"
            android:layout_marginTop="25dp"/>


        <EditText
            android:id="@+id/editprof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/prof"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textviewtuteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tuteur"
            android:layout_marginTop="25dp"/>


        <EditText
            android:id="@+id/edittuteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/tuteur"
            android:autofillHints="" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">

            <Button
                android:id="@+id/btnAnnulerInfoStagiaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_retour" />

            <Button
                android:id="@+id/btnValiderInfoStagiaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_valider" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>